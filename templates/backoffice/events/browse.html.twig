{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Évènements
{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>Liste des évènements</h1>
    </div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Titre</th>
            <th scope="col">Date</th>
            <th scope="col">Nb max. participants</th>
            <th scope="col">Archivé</th>
            <th scope="col">Type</th>
            <th scope="col">Créé le</th>
            <th scope="col">Modifié le</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr class="table-{{ cycle(['dark', 'default'], loop.index) }}">
                <th scope="row">{{ event.id }}</th>
                <td>{{ event.title }}</td>
                <td>{{ event.date|date('Y-m-d H:i') }}</td>
                <td>{{ event.maxMembers }}</td>
                <td>{{ event.isArchived ? 'Archivé' : 'Non archivé' }}</td>
                <td>{{ event.isOnline ? 'En ligne' : 'Présentiel' }}</td>
                <td>{{ event.createdAt | date('Y-m-d H:i') }}</td>
                <td>{{ event.updatedAt ? event.updatedAt | date('Y-m-d H:i') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('backoffice_events_read', {id : event.id}) }}">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-light" href="{{ path('backoffice_events_edit', {id : event.id}) }}">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </a>
                    <form action="{{ path('backoffice_events_delete', {id : event.id}) }}" class="d-inline"
                          method="post"
                          onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cet évènement ?')">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_events_' ~ event.id) }}">
                        <input type="hidden" name="_method" value="delete">
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
