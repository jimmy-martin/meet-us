{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Ajouter une catégorie
{% endblock %}

{% block body %}

    <div class="col-12">
        <h1>Ajouter une nouvelle catégorie</h1>
    </div>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.picture) }}
    <button class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}

{% endblock %}